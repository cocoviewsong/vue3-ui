{
  "compilerOptions": {
    "declaration": true, // 启用声明文件生成
    "declarationDir": "dist/types", // 声明文件的输出目录
    "emitDeclarationOnly": true, // 只生成声明文件（不生成 JavaScript）
    "outDir": "dist", // 所有输出文件的根目录
    "module": "ESNext", // 适合 Vue 3
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true, // 开启严格模式
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"], // 包含 .ts 和 .vue 文件
  "exclude": ["node_modules", "dist", "tests"] // 排除不必要的文件
}
